<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activity.UpLoadCertificatesActivity">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="上传证件" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/zhengmian" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/fanmian" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/jiashizheng" />

    <Button
        android:id="@+id/submit_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_confirm_order"
        android:text="提交审核" />

</LinearLayout>