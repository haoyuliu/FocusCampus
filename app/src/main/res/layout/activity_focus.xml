<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="好友" />

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/focus_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:xTabIndicatorColor="@color/color_check_home"
        app:xTabIndicatorWidth="40dp"
        app:xTabSelectedTextColor="@color/black"
        app:xTabSelectedTextSize="15sp"
        app:xTabTextBold="true"
        app:xTabTextColor="#CCCCCC"
        app:xTabTextSize="15sp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/focus_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>