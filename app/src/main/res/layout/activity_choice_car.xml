<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activity.ChoiceCarActivity">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lineVisible="false"
        app:title="选车"
        app:titleSize="18sp" />


    <com.sam.globalRentalCar.widget.DropDownMenu.DropDownMenu
        android:id="@+id/dropDownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dddividerColor="@color/transparent"
        app:ddmenuBackgroundColor="@color/white"
        app:ddmenuMenuHeightPercent="0.5"
        app:ddmenuSelectedIcon="@drawable/arrow_top"
        app:ddmenuTextSize="14sp"
        app:ddmenuUnselectedIcon="@drawable/arrow_down"
        app:ddtextSelectedColor="@color/color_check_home"
        app:ddtextUnselectedColor="#666666"
        app:ddunderlineColor="#FAFAFA" />

</LinearLayout>